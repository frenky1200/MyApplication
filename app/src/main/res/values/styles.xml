    <style name="Yellow" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorYellow</item>
        <item name="colorPrimaryDark">@color/colorPrimaryYellow</item>
        <item name="colorAccent">@color/colorAccentYellow</item>
